{
  "openapi": "3.0.3",
  "info": {
    "title": "Deploy Webhook",
    "description": "Webhookを介してデプロイスクリプトを実行するためのAPI",
    "version": "1.3.4"
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/webhook/{serviceId}": {
      "post": {
        "description": "指定されたサービスIDを引数に指定して、デプロイスクリプトを実行します",
        "parameters": [
          {
            "schema": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_-]+$"
            },
            "in": "path",
            "name": "serviceId",
            "required": true,
            "description": "デプロイするサービスのID"
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "x-signature",
            "required": true,
            "description": "シークレットを使用して生成されたリクエストのHMAC SHA-256署名"
          },
          {
            "schema": {
              "type": "string",
              "pattern": "^\\d+$"
            },
            "in": "header",
            "name": "x-timestamp",
            "required": true,
            "description": "リクエストのタイムスタンプ(エポック秒)"
          }
        ],
        "responses": {
          "202": {
            "description": "デプロイが受け付けられ、バックグラウンドで処理を開始した",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "デプロイが受け付けられ、バックグラウンドで処理を開始した",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Accepted"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "ヘッダーが不足している、または無効",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "ヘッダーが不足している、または無効",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid signature"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:{port}",
      "description": "Local server",
      "variables": {
        "port": {
          "default": "3000"
        }
      }
    }
  ]
}
