{
  "name": "deploy-webhook",
  "version": "1.3.3",
  "description": "Webhookを介してデプロイスクリプトを実行するためのAPI",
  "author": "nana4rider",
  "license": "ISC",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx --env-file=.env src/index.ts",
    "start": "node dist/index",
    "build": "node build.js",
    "type-check": "tsc",
    "lint": "eslint --max-warnings 0 && prettier . --check",
    "lint:fix": "eslint --fix && prettier . --write",
    "test": "vitest run",
    "prepare": "husky",
    "openapi": "NODE_ENV=test tsx generate-openapi.ts"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings 0",
      "prettier --check"
    ],
    "*.{js,json,md,yml,yaml}": "prettier --check"
  },
  "dependencies": {
    "@actions/exec": "^1.1.1",
    "envalid": "^8.0.0",
    "fastify": "^5.2.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@eslint/js": "^9.17.0",
    "@fastify/swagger": "^9.4.2",
    "@types/node": "^22.13.14",
    "@vitest/coverage-v8": "^3.0.8",
    "@vitest/eslint-plugin": "^1.1.37",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "3.4.2",
    "tsx": "^4.19.2",
    "type-fest": "^4.31.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8"
  }
}
